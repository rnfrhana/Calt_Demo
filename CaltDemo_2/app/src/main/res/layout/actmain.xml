<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:orientation="vertical"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 上一 -->
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        <!-- 顯示窗 -->
        <TextView
            android:id="@+id/tvShow2"
            android:text=""
            android:textSize="50dp"
            android:gravity="right"
            android:layout_weight="8"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <TextView
            android:id="@+id/tvShow"
            android:text="0"
            android:textSize="50dp"
            android:gravity="right"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>


    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        <!-- 第一排按鍵 -->
        <Button
            android:id="@+id/btn7"
            android:textColor="#ffffff"
            android:background="#007799"
            android:layout_margin="3px"
            android:text="7"
            android:textSize="25dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btn8"
            android:textColor="#ffffff"
            android:background="#007799"
            android:layout_margin="3px"
            android:text="8"
            android:textSize="25dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btn9"
            android:textColor="#ffffff"
            android:background="#007799"
            android:layout_margin="3px"
            android:text="9"
            android:textSize="25dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btnAdd"
            android:textColor="#ffffff"
            android:background="#FF8888"
            android:layout_margin="3px"
            android:text="+"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- 中二 -->
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <Button
            android:id="@+id/btn4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="3px"
            android:layout_weight="1"
            android:background="#007799"
            android:text="4"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn5"
            android:textColor="#ffffff"
            android:background="#007799"
            android:layout_margin="3px"
            android:text="5"
            android:textSize="25dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btn6"
            android:textColor="#ffffff"
            android:background="#007799"
            android:layout_margin="3px"
            android:text="6"
            android:textSize="25dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnMin"
            android:textColor="#ffffff"
            android:background="#FF8888"
            android:layout_margin="3px"
            android:text="-"
            android:textSize="25dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <Button
            android:id="@+id/btn1"
            android:textColor="#ffffff"
            android:background="#007799"
            android:layout_margin="3px"
            android:text="1"
            android:textSize="25dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btn2"
            android:textColor="#ffffff"
            android:background="#007799"
            android:layout_margin="3px"
            android:text="2"
            android:textSize="25dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btn3"
            android:textColor="#ffffff"
            android:background="#007799"
            android:layout_margin="3px"
            android:text="3"
            android:textSize="25dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btnMul"
            android:text="*"
            android:textColor="#ffffff"
            android:background="#FF8888"
            android:layout_margin="3px"
            android:textSize="25dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        xmlns:android="http://schemas.android.com/apk/res/android" >
        <LinearLayout android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            xmlns:android="http://schemas.android.com/apk/res/android" >
            <!-- 第四排按鍵 -->
            <Button
                android:id="@+id/btnCLR"
                android:textColor="#ffffff"
                android:background="#FF8888"
                android:layout_margin="3px"
                android:text="CLR"
                android:textSize="25dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" />
            <Button
                android:id="@+id/btn0"
                android:textColor="#ffffff"
                android:background="#007799"
                android:layout_margin="3px"
                android:text="0"
                android:textSize="25dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/btnIs"
                android:textColor="#ffffff"
                android:background="#FF8888"
                android:layout_margin="3px"
                android:text="="
                android:textSize="25dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" />
            <Button
                android:id="@+id/btnDiv"
                android:textColor="#ffffff"
                android:background="#FF8888"
                android:layout_margin="3px"
                android:text="/"
                android:textSize="25dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
